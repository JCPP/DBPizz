{% extends 'base.twig' %}

{% block subtitle %}- Ordini Ricerca{% endblock %}

{% block content %}
	<h1>Risultato ricerca</h1>
	{% if ordini %}
		<table border="1px">
			<thead>
				<tr>
					<th>Cliente</th>
					<th>Prodotto</th>
					<th>Data</th>
				</tr>
			</thead>
			<tbody>
				{% for ordine in ordini %}
					<tr>
						<td>{{ ordine.Nome_Cl ~ ' ' ~ ordine.Cognome_Cl }}</td>
						<td>{{ ordine.Nome_Pr }}</td>
						<td>{{ ordine.DataOrdine }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		Nessun ordine trovato.
	{% endif %}
{% endblock %}