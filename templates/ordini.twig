{% extends 'base.twig' %}

{% block subtitle %}- Ordini{% endblock %}

{% block content %}
	{% include 'formOrdiniRicerca.twig' %}
	<a href="{{ app.urlFor("OrdiniAdd") }}">Aggiungi un ordine</a></br>
	{% if ordini %}
		<table border="1px">
			<thead>
				<tr>
					<th>Cliente</th>
					<th>Prodotto</th>
					<th>Data</th>
				</tr>
			</thead>
			<tbody>
				{% for ordine in ordini %}
					<tr>
						<td><a href="{{ app.urlFor("Cliente", {'id': ordine.IDCliente}) }}">{{ ordine.Nome_Cl ~ ' ' ~ ordine.Cognome_Cl }}</a></td>
						<td>{{ ordine.Nome_Pr }}</td>
						<td>{{ ordine.DataOrdine }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		Nessun ordine effettuato.
	{% endif %}
{% endblock %}