{% extends 'base.twig' %}

{% block subtitle %}- Aggiungi Ordine{% endblock %}

{% block content %}
<form method="post" action="{{ app.urlFor("OrdiniAddPost") }}">
	<table>
		<tr>
			<td><label for="IDCliente">Cliente</label></td>
			<td>
				<select name="idCliente" id="IDCliente">
					<option value=""></option>
					{% for cliente in clienti %}
						<option value="{{ cliente.IDCliente }}"> {{ cliente.Nome_Cl ~ ' ' ~ cliente.Cognome_Cl }}</option>
					{% endfor %}
				</select>
			</td>
		</tr>
		<tr>
			<td><label for="IDProdotto">Prodotto</label></td>
			<td>
				<select name="idProdotto" id="IDProdotto">
					<option value=""></option>
					{% for prodotto in prodotti %}
						<option value="{{ prodotto.IDProdotto }}"> {{ prodotto.Nome_Pr }}</option>
					{% endfor %}
				</select>
			</td>
		</tr>
		<tr>
			<td><label for="DataOrdine">Data Ordine (in formato ISO8601)</label></td>
			<td><input type="datetime" name="dataOrdine" id="DataOrdine"></td>
		</tr>
		<tr>
			<td colspan="2"><input type="submit" value="Aggiungi Ordine"></td>
		</tr>
	</table>
</form>
{% endblock %}