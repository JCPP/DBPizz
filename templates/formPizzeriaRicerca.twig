<div id="ricerca">
	Ricerca personalizzata:<br/>
	<form method="post" action="{{ app.urlFor('PizzerieRicerca') }}">
		<table>
			<tr>
				<td><label for="nome">Nome</label></td>
				<td>
					<select name="Nome_Pizz" id="nome">
						<option value=""></option>
						{% for pizzeria in pizzerie %}
							<option value="{{ pizzeria.Nome_Pizz }}">{{ pizzeria.Nome_Pizz }}</option>
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="numero">Numero Telefonico</label></td>
				<td>
					<select name="Numero_Tel" id="numero">
						<option value=""></option>
						{% for pizzeria in pizzerie %}
							<option value="{{ pizzeria.Numero_Tel }}">{{ pizzeria.Numero_Tel }}</option>
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="cap">CAP</label></td>
				<td>
					<select name="CAP" id="cap">
						<option value=""></option>
						{# Array vuoto che conterr� tutti i CAP trovati per evitare di scrivere pi� volte lo stesso CAP #}
						{% set CAP = [] %}
						
						{% for pizzeria in pizzerie %}
							{% if pizzeria.CAP not in CAP %}
								{% set CAP = CAP|merge([pizzeria.CAP]) %}
							
								<option value="{{ pizzeria.CAP }}">{{ pizzeria.CAP }}</option>
							{% endif %}
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="paese">Paese</label></td>
				<td>
					<select name="Paese" id="paese">
						<option value=""></option>
						{# Array vuoto che conterr� tutti i paesi trovati per evitare di scrivere pi� volte lo stesso paese #}
						{% set paese = [] %}
						
						{% for pizzeria in pizzerie %}
							{% if pizzeria.Paese not in paese %}
								{% set paese = paese|merge([pizzeria.Paese]) %}
								
								<option value="{{ pizzeria.Paese }}">{{ pizzeria.Paese }}</option>
							{% endif %}
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="via">Via</label></td>
				<td>
					<select name="Via" id="via">
						<option value=""></option>
						{# Array vuoto che conterr� tutte le vie trovati per evitare di scrivere pi� volte la stessa via #}
						{% set via = [] %}
						
						{% for pizzeria in pizzerie %}
							{% if pizzeria.Via not in via %}
								{% set via = via|merge([pizzeria.Via]) %}
								
								<option value="{{ pizzeria.Via }}">{{ pizzeria.Via }}</option>
							{% endif %}
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="civico">Civico</label></td>
				<td>
					<select name="Civico" id="civico">
						<option value=""></option>
						{# Array vuoto che conterr� tutti i civici trovati per evitare di scrivere pi� volte lo stesso civico #}
						{% set civico = [] %}
						
						{% for pizzeria in pizzerie %}
							{% if pizzeria.Civico not in civico %}
								{% set civico = civico|merge([pizzeria.Civico]) %}
								
								<option value="{{ pizzeria.Civico }}">{{ pizzeria.Civico }}</option>
							{% endif %}
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td><label for="asporto">Asporto</label></td>
				<td>
					<select name="Asporto" id="asporto">
						<option value=""></option>
						<option value="1">Sì</option>
						<option value="0">No</option>
					</select>
				</td>
			</tr>
			<tr>
				<td colspan="2"><input type="submit" value="Ricerca"></td>
			</tr>
		</table>
	</form>
</div>