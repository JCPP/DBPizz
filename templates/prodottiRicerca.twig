{% extends 'base.twig' %}

{% block subtitle %}- Prodotti Ricerca{% endblock %}

{% block content %}
	<h1>Risultato ricerca</h1>
	{% if prodotti %}
		<table border="1px">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nome</th>
					<th>Prezzo</th>
					<th>Ingredienti</th>
				</tr>
			</thead>
			<tbody>
				{% for prodotto in prodotti %}
					<tr>
						<td>{{ prodotto.IDProdotto }}</td>
						<td>{{ prodotto.Nome_Pr }}</td>
						<td>{{ prodotto.Prezzo_Pr }}</td>
						{% set ingredienti = prodotto.ingredienti().find_many() %}
						<td>
						{% if ingredienti %}
							{% for ingrediente in ingredienti %}
								{{ ingrediente.Nome_Ing }}
								{% if loop.last == false %}
								,
								{% endif %}
							{% endfor %}
							
						{% else %}
							 
						{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		Nessun prodotto trovato.
	{% endif %}
{% endblock %}